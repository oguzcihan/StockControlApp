
@{
    ViewData["Title"] = "Ürün Güncelle";
}

@model StockControlApp.Models.ViewModels.ProductViewModel
<div class="col-lg-12">
    <div>
        <div class="card ">
            <div class="card-body ">
                <h4 class="text-center">Ürün Güncelleme Formu</h4>
                <hr/>
                <div class="tab-content ">
                    <div class="tab-pane fade active show ">
                        <div class="pt-3">
                            <form method="POST" autocomplete="off" asp-controller="Product" asp-action="UpdateProduct">
                                <div class="form-group col-md-12">
                                    <label>Ürün Adı:</label>
                                    <input asp-for="ProductName" type="text" id="productName" placeholder="Ürün adı giriniz" class="form-control">
                                </div>
                                <div class="form-group col-md-12">
                                    <label>Ürün Adedi:</label>
                                    <input asp-for="Amount" type="number" id="productAmount" placeholder="Ürün adedi giriniz" class="form-control">
                                </div>
                                <div class="form-group col-md-12">
                                    <label>Ürün Fiyatı:</label>
                                    <input asp-for="Price" type="text" id="productPrice" placeholder="Ürün fiyatı giriniz" class="form-control">
                                </div>
                                <div class="text-center">
                                    <input style="margin-top: 10px; width: 150px;" type="submit" value="Kaydet" class="btn btn-primary">
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
